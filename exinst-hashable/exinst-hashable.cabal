library
  hs-source-dirs: src/lib
  default-language: Haskell2010
  exposed-modules:
      Exinst.Instances.Hashable
  build-depends:
      base >=4.7 && <5.0
    , hashable >=1.2 && <1.3
    , constraints >=0.4 && <0.9
    , exinst >=0.1 && <0.2
    , singletons >=2.2 && <2.3
  ghcjs-options: -Wall -O3
  ghc-options: -Wall -O2
