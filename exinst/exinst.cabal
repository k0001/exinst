name:                exinst
version:             0.2
author:              Renzo Carbonara
maintainer:          renzoÎ»carbonara.com.ar
copyright:           Renzo Carbonara 2015-2016
license:             BSD3
license-file:        LICENSE.txt
extra-source-files:  README.md CHANGELOG.md
category:            Data
build-type:          Simple
cabal-version:       >=1.18
synopsis:            Derive instances for your existential types.
homepage:            https://github.com/k0001/exinst
bug-reports:         https://github.com/k0001/exinst/issues


library
  hs-source-dirs: src/lib
  default-language: Haskell2010
  exposed-modules:
      Exinst.Singletons
      Exinst.Instances.Base
  build-depends:
      base >=4.9
    , constraints >=0.4
    , profunctors >=5.0
    , singletons >=2.2
  ghcjs-options: -Wall -O3
  ghc-options: -Wall -O2

  if flag(quickcheck)
    build-depends: QuickCheck
    other-modules: Exinst.Instances.QuickCheck


test-suite tests
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  hs-source-dirs: tests src/lib
  main-is: Main.hs
  build-depends:
     base
   , constraints
   , generic-random <0.4
   , profunctors
   , QuickCheck
   , singletons
   , tasty
   , tasty-hunit
   , tasty-quickcheck


flag quickcheck
  description: Provide instances for @QuickCheck@
  default: True
  manual: True
